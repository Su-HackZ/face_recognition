<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_height="0dp">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">




            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageview"
                android:layout_width="65dp"
                android:layout_marginTop="2dp"
                android:layout_height="65dp"
                android:src="@drawable/ic_addimage"
                app:civ_border_width="2dp"
                android:layout_gravity="center"
                app:civ_border_color="@color/white"/>

<!--
            xmlns:app="http://schemas.android.com/apk/res-auto"
-->

<!--
            <ImageView
                android:id="@+id/imageview"
                android:layout_width="70dp"
                android:background="@drawable/ic_launcher_foreground"
                android:layout_height="70dp"/>-->
            <TextView
                android:layout_width="wrap_content"
                android:textSize="10dp"
                android:textColor="#80ffe8"
                android:text="Uplad Image "
                android:layout_height="wrap_content"/>



        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="Welcome"
                android:textSize="14dp"
                android:fontFamily="@font/gothambook"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="SingUp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/gothambold"
                android:textSize="16dp"
                android:layout_height="wrap_content"/>



        </LinearLayout>







    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2.2"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:paddingRight="22dp"
        android:background="@drawable/bg_cover_layout"
        android:layout_height="0dp">



        <TextView
            android:layout_width="wrap_content"
            android:text="Full Name "
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_square"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:hint="Enter Name"
                android:background="@null"
                android:maxLines="1"
                android:textSize="16dp"
                android:imeOptions="actionNext"
                android:paddingTop="10dp"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:text="Roll Number "
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_square"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/rollnumber"
                android:layout_width="match_parent"
                android:hint="Roll Number"
                android:background="@null"
                android:maxLines="1"
                android:textSize="16dp"
                android:imeOptions="actionNext"

                android:paddingTop="10dp"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>






        <TextView
            android:layout_width="wrap_content"
            android:text="Email  "
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_square"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/useremail"
                android:layout_width="match_parent"
                android:hint="Enter Email"
                android:background="@null"
                android:paddingTop="10dp"
                android:imeOptions="actionNext"

                android:textSize="16dp"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="Password  "
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_square"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:hint="Enter Password"
                android:background="@null"
                android:paddingTop="10dp"
                android:textSize="16dp"
                android:imeOptions="actionNext"

                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="Conform Password  "
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_square"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/condormPassword"
                android:layout_width="match_parent"
                android:hint="Enter Conform Password"
                android:background="@null"
                android:imeOptions="actionDone"
                android:paddingTop="10dp"
                android:textSize="16dp"
                android:paddingLeft="8dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <TextView
            android:id="@+id/sigunup"
            android:layout_width="match_parent"
            android:background="@drawable/bg_loginbtn"
            android:textColor="@color/white"
            android:text="Sign UP"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:fontFamily="@font/gothambold"
            android:layout_height="wrap_content"/>



        <LinearLayout
            android:id="@+id/lofinscreen"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:text="Allready have an account"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:text="Login "
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_height="0dp">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">








        </LinearLayout>




    </LinearLayout>
</LinearLayout>